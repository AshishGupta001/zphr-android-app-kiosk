<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->


    <style name="MyCheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/appThemeColor_2</item>
        <item name="colorControlActivated">@color/appThemeColor_1</item>
    </style>


    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>


    <style name="AppCompatTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:textColorSecondary">@android:color/white</item>

        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/appThemeColor_1</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/appThemeColor_Dark_1</item>

        <!-- colorAccent is used as the default value for colorControlActivated,
             which is used to tint widgets -->
        <item name="colorAccent">@color/appThemeColor_2</item>

        <!-- Active thumb color & Active track color(30% transparency) -->
        <item name="colorControlActivated">@color/appThemeColor_2</item>

        <!--<item name="android:actionOverflowButtonStyle">@style/OverflowMenuButton</item>-->
        <item name="actionOverflowButtonStyle">@style/OverflowMenuButton</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenu</item>

        <item name="android:windowBackground">@color/white</item>
        <item name="android:colorBackground">@color/white</item>

    </style>


    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/appThemeColor_1</item>
        <item name="android:textColorPrimary">@color/appThemeColor_1</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="OverflowMenuButton" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_menu_overflow</item>
    </style>


    <style name="theme_my_progress_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="bg_materialEditText" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/editBox_primary</item>
        <item name="colorPrimaryDark">@color/editBox_primary_dark</item>
        <item name="colorAccent">@color/editBox_accent</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <style name="Theme_Dialog" parent="android:Theme.Holo.Dialog">
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
    </style>

    <style name="OverflowMenu" parent="@style/Widget.AppCompat.PopupMenu">
        <!-- Required for pre-Lollipop. -->
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownVerticalOffset">-4.0dip</item>

        <item name="android:src">@drawable/ic_menu_overflow</item>
        <item name="android:popupBackground">@color/appThemeColor_1</item>

    </style>
<!--Deliver all-->

</resources>
