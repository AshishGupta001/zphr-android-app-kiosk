<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:fillViewport="true"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#40FFFFFF"
        android:orientation="vertical"
        android:paddingEnd="10dp"
        android:paddingStart="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.view.MTextView
                    app:customTypeFace="@string/robotobold"
                    android:id="@+id/cabTypeNumText"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:padding="5dp"
                    android:text=""
                    android:textAlignment="center"
                    android:textColor="@color/appThemeColor_TXT_1"
                    android:textSize="@dimen/_10sdp"
                    />


                <com.view.MTextView
                    app:customTypeFace="@string/robotomediumFont"
                    android:id="@+id/cabTypeTitleTxt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:text=""
                    android:textAlignment="viewStart"
                    android:textColor="#050505"
                    android:textSize="@dimen/_12sdp"


                    />
            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/carTypeImgView"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:scaleType="centerCrop" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:layout_marginStart="8dp"
                    android:gravity="start"
                    android:orientation="vertical">


                    <com.view.MTextView
                        app:customTypeFace="@string/robotomediumFont"
                        android:id="@+id/cabTypeNameTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text=""
                        android:textColor="#2b2a29"
                        android:textSize="@dimen/_10sdp"
                        />

                    <com.view.MTextView
                        android:id="@+id/cabPersonCapacityTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="start|center"
                        android:text=""
                        android:layout_marginTop="5dp"
                        android:textColor="#909090"
                        android:textSize="@dimen/_8sdp"


                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.view.MTextView
                    android:id="@+id/fareNumText"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:padding="5dp"
                    android:text="2"
                    android:textAlignment="center"
                    android:textColor="@color/appThemeColor_TXT_1"
                    android:textSize="@dimen/_10sdp"
                    app:customTypeFace="@string/robotobold" />


                <com.view.MTextView
                    android:id="@+id/fareTitleTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:padding="2dp"
                    android:text=""
                    android:textAlignment="center"
                    android:textColor="#050505"
                    android:textSize="@dimen/_12sdp"
                    app:customTypeFace="@string/robotomediumFont"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/fareTypeImgView"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:scaleType="centerCrop"
                        />


                </LinearLayout>

                <LinearLayout

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <com.view.MTextView
                            app:customTypeFace="@string/robotomediumFont"
                            android:id="@+id/fareValueTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="2dp"
                            android:text=""
                            android:textColor="@color/appThemeColor_1"
                            android:textSize="@dimen/_10sdp"
                            />


                        <LinearLayout

                            android:layout_gravity="center_vertical"
                            android:id="@+id/infoimage"
                            android:gravity="center"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_20sdp">
                            <ImageView

                                android:layout_weight="0"
                                android:layout_margin="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|top"
                                android:visibility="visible"
                                android:tint="@color/appThemeColor_2"
                                app:srcCompat="@drawable/ic_information"
                                tools:ignore="VectorDrawableCompat" />
                        </LinearLayout>

                    </LinearLayout>


                        <com.view.MTextView
                            android:layout_marginTop="10dp"
                            app:customTypeFace="@string/robotomediumFont"
                            android:id="@+id/fareSubTitleTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="start|center"
                            android:text=""
                            android:textColor="#909090"
                            android:textSize="@dimen/_8sdp"
                            />


                </LinearLayout>
            </LinearLayout>



        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:gravity="bottom|center"
            android:layout_gravity="bottom|center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp">

            <com.view.MTextView
                android:id="@+id/actualTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="@dimen/_2sdp"
                android:text=""
                android:textColor="#909090"
                android:textSize="@dimen/_7sdp"
                />

            <com.view.MTextView
                android:layout_marginTop="10dp"
                app:customTypeFace="@string/robotomediumFont"
                android:id="@+id/btn_book_now_type2"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/all_btn_height2"
                android:layout_gravity="center"
                android:background="@drawable/black_roubnded_view"
                android:gravity="center"
                android:text="Book Now"
                android:textAllCaps="true"
                android:textColor="@color/black_button_text_color"
                android:textSize="@dimen/_12sdp" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>